1. time_in_seconds:

import time as tm

total_seconds = int(input('Введите, пожалуйста, время в секундах:'))

if total_seconds <= 0:
    while total_seconds <= 0:
       print('Вы ввели отрицательное число или ноль. Время вспять мы пока поворачивать не научились.')
       total_seconds = int(input('Введите, пожалуйста, время в секундах:'))
       if total_seconds > 0:
           print(f'Вы ввели секунд: {total_seconds}. Это: {tm.strftime("%H:%M:%S", tm.gmtime(total_seconds))}')
           break
else:
    print(f'Вы ввели секунд: {total_seconds}. Это: {tm.strftime("%H:%M:%S", tm.gmtime(total_seconds))}')
    
2.Sum_of_numbers:  

number = int(input('Введите, пожалуйста, число:'))
number2 = str(number)
sum_number1 = number2 + number2
sum_number2 = number2 + number2 + number2

total = int(number2) + int(sum_number1) + int(sum_number2)

print(f'Вы ввели число: {number}. Два таких числа это: {sum_number1}. Три таких числа это: {sum_number2}. Сумма всех чисел: {total}.')

3. running:

distance1 = 2
distance2 = 3

print(f'1-й день: {distance1}')
for i in range(2, 7):
    distance1 *= 1.1
    print(f'{i}-й день: {distance1:.2f}')
print(f'на {i}-й день:спортсмен достиг результата — не менее 3 км.')

4. revenue_costs:

revenue = float(input('Введите, пожалуйста, выручку Вашей компании:'))
costs = float(input('Введите, пожалуйста, издержки Вашей компании:'))

def profit_profitability(revenue, costs):
    profit = revenue - costs
    if revenue > costs:
        profitability = costs / profit
        return f'Ваша прибыль составила: {profit:.2f}. Рентабильность выручки составила: {profitability:.2f}'
    elif revenue == costs:
        return f'Издержки равны выручке.'
    else:
        return f'Издержки превышают выручку на: {profit:.2f}.'

def profit_staff(revenue, costs):
    staff = int(input('Введите, пожалуйста, количество сотрудников, работающих в Вашей компании, для расчета прибыли компании на одного сотрудника:'))
    if staff == staff:
        profit = revenue - costs
        profit_for_person = profit/staff
        if profit_for_person > 0:
            return f'Прибыль компании на одного сотрудника составила: {profit_for_person:.2f}'
        elif profit_for_person == 0:
            return f'Ноль есть ноль и никуда от него не деться.'
        else:
            return f'Убыток компании на одного сотрудника составил: {profit_for_person:.2f}'


if revenue < 0 or costs < 0:
    while revenue < 0 or costs < 0:
        print(f'Введите, пожалуйста, число без знака "-".')
        revenue = float(input('Введите, пожалуйста, выручку Вашей компании:'))
        costs = float(input('Введите, пожалуйста, издержки Вашей компании:'))
        if revenue >= 0 or costs >= 0:
            print(profit_profitability(revenue, costs))
            print(profit_staff(revenue, costs))
            break
else:
    print(profit_profitability(revenue, costs))
    print(profit_staff(revenue, costs))
    
5. lagerst number:

number = int(input('Введите, пожалуйста, произвольное число:'))

if number < 0:
    while number < 0:
        print('Вы ввели отрицательное число.')
        number = int(input('Введите, пожалуйста, произвольное число больше нуля:'))
        if number >= 0:
            number_2 = str(number)
            numbers_list = list(map(int, number_2))
            largest_number = max(numbers_list)
            print(f'Вы ввели число: {number}.Наибольшая цифра в этом числе: {largest_number}.')
            break
else:
    number_2 = str(number)
    numbers_list = list(map(int, number_2))
    largest_number = max(numbers_list)
    print(f'Вы ввели число: {number}.Наибольшая цифра в этом числе: {largest_number}.')
    
6. variables:
age = int(input('В каком году Вы родились?'))
year = 2020
years = year - age
name = input('Как Вас зовут?')
cat_lovers = input('Вы любите кошек?')
positive_answer = ['да', 'ДА', 'Да', 'yes', 'очень', 'обожаю']
negative_answer = ['нет', 'Нет', 'НЕТ', 'no', 'ненавижу', 'терпеть не могу']

if cat_lovers in positive_answer:
    print(f'Вас зовут: {name}, Вам: {years}, Вы любите кошек.')
elif cat_lovers in negative_answer:
    dog_lovers = input('А собак?')
    if dog_lovers in positive_answer:
        print(f'Вас зовут: {name}, Вам: {years}, Вы любите собак.')
    elif dog_lovers in negative_answer:
        print(f'Вас зовут: {name}, Вам: {years}, Вы не любите ни кошек ни собак.')
    else:
        print(f'Ваш ответ не понятен. Для нас это видимо, {name}, останется загадкой.')
else:
    print(f'Ваш ответ не понятен. Для нас это видимо, {name}, останется загадкой.')
    dog_lovers = input('А собак?')
    if dog_lovers in positive_answer:
        print(f'Вас зовут: {name}, Вам: {years}, Вы любите собак.')
    elif dog_lovers in negative_answer:
        print(f'Вас зовут: {name}, Вам: {years}, Вы не любите ни кошек ни собак.')
    else:
        print(f'И это, {name}, тоже останется загадкой. Таких слов мы пока видимо не знаем.')
